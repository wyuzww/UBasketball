<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/player"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@drawable/rectangle_frame_shape"
        android:gravity="center"
        android:text="#4 钟文武" />

    <TextView
        android:id="@+id/score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/rectangle_frame_shape"
        android:gravity="center"
        android:text="26" />

    <TextView
        android:id="@+id/three"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/rectangle_frame_shape"
        android:gravity="center"
        android:text="3" />

    <TextView
        android:id="@+id/two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/rectangle_frame_shape"
        android:gravity="center"
        android:text="12" />

    <TextView
        android:id="@+id/one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/rectangle_frame_shape"
        android:gravity="center"
        android:text="5" />

    <TextView
        android:id="@+id/assist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/rectangle_frame_shape"
        android:gravity="center"
        android:text="5" />

    <TextView
        android:id="@+id/backboard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/rectangle_frame_shape"
        android:gravity="center"
        android:text="4" />

    <TextView
        android:id="@+id/steal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/rectangle_frame_shape"
        android:gravity="center"
        android:text="1" />

    <TextView
        android:id="@+id/block"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/rectangle_frame_shape"
        android:gravity="center"
        android:text="2" />

    <TextView
        android:id="@+id/foul"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/rectangle_frame_shape"
        android:gravity="center"
        android:text="3" />


</LinearLayout>

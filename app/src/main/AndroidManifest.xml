            </intent-filter>
        </activity>
        <activity
            android:name=".activity.register.RegisterActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask" />
        <activity
            android:name=".activity.login.LoginByMessageActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask" />
        <activity
            android:name=".activity.login.LoginByPasswordActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask" />
        <activity
            android:name=".activity.userfragment.UserInfoActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask" />

        <activity android:name="com.mob.tools.MobUIShell" />

        <meta-data
            android:name="Mob-AppKey"
            android:value="2711b513b7e98" />
        <meta-data
            android:name="Mob-AppSecret"
            android:value="3f4956b452fd3d82671f707193bda8ef" />
